        },
        {
            "type": "eval",
            "name": "emotional_score",
            "dispname": "情緒の安定スコア（0-24点）",
            "formula": "[[q17.index]] + [[q18.index]] + [[q19.index]] + [[q20.index]] + [[q21.index]] + [[q22.index]]"
