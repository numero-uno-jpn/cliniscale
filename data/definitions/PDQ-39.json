        },
        {
            "type": "eval",
            "name": "communication_score",
            "dispname": "コミュニケーションスコア（0-12点）",
            "formula": "[[q34.index]] + [[q35.index]] + [[q36.index]]"
        },
        {
            "type": "eval",
            "name": "discomfort_score",
            "dispname": "身体的不具合スコア（0-12点）",
            "formula": "[[q37.index]] + [[q38.index]] + [[q39.index]]"
        },
        {
            "type": "eval",
            "name": "total_score",
            "dispname": "PDQ-39総合スコア（0-156点、点数が低いほどQOLが高い）",
            "formula": "[[mobility_score]] + [[adl_score]] + [[emotional_score]] + [[stigma_score]] + [[social_score]] + [[cognition_score]] + [[communication_score]] + [[discomfort_score]]"
        },
        {
            "type": "eval",
            "name": "mobility_percent",
            "dispname": "運動機能百分率スコア（0-100%）",
            "formula": "(([[mobility_score]] / 40) * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "adl_percent",
            "dispname": "日常生活動作百分率スコア（0-100%）",
            "formula": "([[adl_score]] / 24 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "emotional_percent",
            "dispname": "情緒の安定百分率スコア（0-100%）",
            "formula": "([[emotional_score]] / 24 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "stigma_percent",
            "dispname": "精神的負い目百分率スコア（0-100%）",
            "formula": "(([[stigma_score]] / 16) * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "social_percent",
            "dispname": "社会的支援百分率スコア（0-100%）",
            "formula": "([[social_score]] / 12 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "cognition_percent",
            "dispname": "認知機能百分率スコア（0-100%）",
            "formula": "([[cognition_score]] / 16 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "communication_percent",
            "dispname": "コミュニケーション百分率スコア（0-100%）",
            "formula": "([[communication_score]] / 12 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "discomfort_percent",
            "dispname": "身体的不具合百分率スコア（0-100%）",
            "formula": "([[discomfort_score]] / 12 * 100).toFixed(2)"
        },
        {
            "type": "eval",
            "name": "summary_index",
            "dispname": "PDQ-39サマリーインデックス（0-100%、低いほどQOLが高い）",
            "formula": "( ( ((mobility_percent)) + ((adl_percent)) + ((emotional_percent)) + ((stigma_percent)) + ((social_percent)) + ((cognition_percent)) + ((communication_percent)) + ((discomfort_percent)) ) / 8 ).toFixed(2)"
