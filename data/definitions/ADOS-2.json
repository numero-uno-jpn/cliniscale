        {
            "name": "social_affect_total",
            "type": "eval",
            "dispname": "社会的影響領域の合計点数",
            "formula": "[[eye_contact.index]] + [[facial_expressions.index]] + [[shared_enjoyment.index]] + [[showing.index]] + [[spontaneous_initiation.index]] + [[response_to_name.index]] + [[requesting.index]] + [[gestures.index]] + [[imaginative_play.index]] + [[quality_social_response.index]]"
        },
        {
            "name": "rrb_total",
            "type": "eval",
            "dispname": "制限的・反復的行動領域の合計点数",
            "formula": "[[unusual_sensory_interest.index]] + [[hand_finger_mannerisms.index]] + [[repetitive_interests.index]] + [[unusual_repetitive_interests.index]] + [[compulsions_rituals.index]]"
        },
        {
