        {
            "type": "subsection"
        },
        {
            "name": "頭部スコア",
            "type": "eval",
            "formula": "( ( [[頭部_紅斑.index]] + [[頭部_浸潤.index]] + [[頭部_落屑.index]] ) * [[頭部_範囲.index]] * 0.1).toFixed(2)",
            "dispname": "頭部の部分スコア = (紅斑 + 浸潤 + 落屑) × 範囲 × 0.1"
        },
        {
            "name": "体幹スコア",
            "type": "eval",
            "formula": "( ( [[体幹_紅斑.index]] + [[体幹_浸潤.index]] + [[体幹_落屑.index]] ) * [[体幹_範囲.index]] * 0.3).toFixed(2)",
            "dispname": "体幹の部分スコア = (紅斑 + 浸潤 + 落屑) × 範囲 × 0.3"
        },
        {
            "name": "上肢スコア",
            "type": "eval",
            "formula": "( ( [[上肢_紅斑.index]] + [[上肢_浸潤.index]] + [[上肢_落屑.index]] ) * [[上肢_範囲.index]] * 0.2).toFixed(2)",
            "dispname": "上肢の部分スコア = (紅斑 + 浸潤 + 落屑) × 範囲 × 0.2"
        },
        {
            "name": "下肢スコア",
            "type": "eval",
            "formula": "( ( [[下肢_紅斑.index]] + [[下肢_浸潤.index]] + [[下肢_落屑.index]] ) * [[下肢_範囲.index]] * 0.4).toFixed(2)",
            "dispname": "下肢の部分スコア = (紅斑 + 浸潤 + 落屑) × 範囲 × 0.4"
        },
        {
            "name": "PASI総スコア",
            "type": "eval",
            "formula": "( ((頭部スコア)) + ((体幹スコア)) + ((上肢スコア)) + ((下肢スコア)) ).toFixed(2)",
            "dispname": "PASIスコア（0-72点）: 4つの部位スコアの合計"
        },
        {
            "name": "重症度",
            "type": "eval",
            "formula": "((PASI総スコア)) >= 20 ? '重症' : ( ((PASI総スコア)) >= 10 ? '中等症' : '軽症' )",
            "dispname": "重症度判定: 軽症（10未満）、中等症（10-20）、重症（20以上）"
        },
        {
            "name": "Warning: 中等症警告 PASI総スコア >= 10",
            "type": "warning",
            "formula": "((PASI総スコア)) >= 10"
        },
        {
            "name": "Emergency: 重症警告 PASI総スコア >= 20",
            "type": "emergency",
            "formula": "((PASI総スコア)) >= 20"
        }
