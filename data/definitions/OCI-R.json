        {
            "type": "subsection"
        },
        {
            "name": "washing_score",
            "type": "eval",
            "dispname": "洗浄サブスケール得点(項目5,11,17)",
            "formula": "[[q5_washing.index]] + [[q11_washing.index]] + [[q17_washing.index]]"
        },
        {
            "name": "checking_score",
            "type": "eval",
            "dispname": "確認サブスケール得点(項目2,8,14)",
            "formula": "[[q2_checking.index]] + [[q8_checking.index]] + [[q14_checking.index]]"
        },
        {
            "name": "ordering_score",
            "type": "eval",
            "dispname": "順序サブスケール得点(項目3,9,15)",
            "formula": "[[q3_ordering.index]] + [[q9_ordering.index]] + [[q15_ordering.index]]"
        },
        {
            "name": "obsessing_score",
            "type": "eval",
            "dispname": "強迫観念サブスケール得点(項目6,12,18)",
            "formula": "[[q6_obsessing.index]] + [[q12_obsessing.index]] + [[q18_obsessing.index]]"
        },
        {
            "name": "neutralizing_score",
            "type": "eval",
            "dispname": "中和サブスケール得点(項目4,10,16)",
            "formula": "[[q4_neutralizing.index]] + [[q10_neutralizing.index]] + [[q16_neutralizing.index]]"
        },
        {
            "name": "hoarding_score",
            "type": "eval",
            "dispname": "溜め込みサブスケール得点(項目1,7,13)",
            "formula": "[[q1_hoarding.index]] + [[q7_hoarding.index]] + [[q13_hoarding.index]]"
        },
        {
            "name": "ocd_component_score",
            "type": "eval",
            "dispname": "OCD成分得点(15項目: 溜め込み除く、0-60点、カットオフ12点)",
            "formula": "[[washing_score]] + [[checking_score]] + [[ordering_score]] + [[obsessing_score]] + [[neutralizing_score]]"
        },
        {
            "name": "hoarding_component_score",
            "type": "eval",
            "dispname": "溜め込み成分得点(3項目: 1,7,13、0-12点、カットオフ6点)",
            "formula": "[[hoarding_score]]"
        },
        {
            "name": "total_score",
            "type": "eval",
            "dispname": "OCI-R総得点(18項目全体、0-72点、カットオフ21点)",
            "formula": "[[washing_score]] + [[checking_score]] + [[ordering_score]] + [[obsessing_score]] + [[neutralizing_score]] + [[hoarding_score]]"
        }
