        {
            "type": "subsection"
        },
        {
            "name": "うつ病スコア",
            "type": "eval",
            "dispname": "うつ病下位尺度得点（項目3,5,10,13,16,17,21の合計×2）",
            "formula": "([[Q3.index]] + [[Q5.index]] + [[Q10.index]] + [[Q13.index]] + [[Q16.index]] + [[Q17.index]] + [[Q21.index]]) * 2"
        },
        {
            "name": "不安スコア",
            "type": "eval",
            "dispname": "不安下位尺度得点（項目2,4,7,9,15,19,20の合計×2）",
            "formula": "([[Q2.index]] + [[Q4.index]] + [[Q7.index]] + [[Q9.index]] + [[Q15.index]] + [[Q19.index]] + [[Q20.index]]) * 2"
        },
        {
            "name": "ストレススコア",
            "type": "eval",
            "dispname": "ストレス下位尺度得点（項目1,6,8,11,12,14,18の合計×2）",
            "formula": "([[Q1.index]] + [[Q6.index]] + [[Q8.index]] + [[Q11.index]] + [[Q12.index]] + [[Q14.index]] + [[Q18.index]]) * 2"
        },
        {
            "name": "うつ病重症度",
            "type": "eval",
            "dispname": "うつ病重症度判定（正常0-9、軽度10-13、中等度14-20、重度21-27、極重度28+）",
            "formula": "[[うつ病スコア]] >= 28 ? '極重度' : ([[うつ病スコア]] >= 21 ? '重度' : ([[うつ病スコア]] >= 14 ? '中等度' : ([[うつ病スコア]] >= 10 ? '軽度' : '正常')))"
        },
        {
            "name": "不安重症度",
            "type": "eval",
            "dispname": "不安重症度判定（正常0-7、軽度8-9、中等度10-14、重度15-19、極重度20+）",
            "formula": "[[不安スコア]] >= 20 ? '極重度' : ([[不安スコア]] >= 15 ? '重度' : ([[不安スコア]] >= 10 ? '中等度' : ([[不安スコア]] >= 8 ? '軽度' : '正常')))"
        },
        {
            "name": "ストレス重症度",
            "type": "eval",
            "dispname": "ストレス重症度判定（正常0-14、軽度15-18、中等度19-25、重度26-33、極重度34+）",
            "formula": "[[ストレススコア]] >= 34 ? '極重度' : ([[ストレススコア]] >= 26 ? '重度' : ([[ストレススコア]] >= 19 ? '中等度' : ([[ストレススコア]] >= 15 ? '軽度' : '正常')))"
        },
        {
            "name": "重度以上の症状アラート",
            "type": "warning",
            "formula": "{{うつ病重症度}} == '重度' || {{うつ病重症度}} == '極重度' || {{不安重症度}} == '重度' || {{不安重症度}} == '極重度' || {{ストレス重症度}} == '重度' || {{ストレス重症度}} == '極重度'"
        },
        {
            "name": "極重度症状の緊急アラート",
            "type": "emergency",
            "formula": "{{うつ病重症度}} == '極重度' || {{不安重症度}} == '極重度' || {{ストレス重症度}} == '極重度'"
        }
    ]
