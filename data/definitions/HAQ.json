                "かなり困難である",
                "できない"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "type": "subsection"
        },
        {
            "name": "Cat1_max",
            "type": "eval",
            "formula": "[[Q1_1.index]] >= [[Q1_2.index]] ? [[Q1_1.index]] : [[Q1_2.index]]",
            "noreport": true
        },
        {
            "name": "Cat2_max",
            "type": "eval",
            "formula": "[[Q2_1.index]] >= [[Q2_2.index]] ? [[Q2_1.index]] : [[Q2_2.index]]",
            "noreport": true
        },
        {
            "name": "Cat3_max",
            "type": "eval",
            "formula": "[[Q3_1.index]] >= [[Q3_2.index]] ? ( [[Q3_1.index]] >= [[Q3_3.index]] ? [[Q3_1.index]] : [[Q3_3.index]] ) : ( [[Q3_2.index]] >= [[Q3_3.index]] ? [[Q3_2.index]] : [[Q3_3.index]] )",
            "noreport": true
        },
        {
            "name": "Cat4_max",
            "type": "eval",
            "formula": "[[Q4_1.index]] >= [[Q4_2.index]] ? [[Q4_1.index]] : [[Q4_2.index]]",
            "noreport": true
        },
        {
            "name": "Cat5_max",
            "type": "eval",
            "formula": "[[Q5_1.index]] >= [[Q5_2.index]] ? ( [[Q5_1.index]] >= [[Q5_3.index]] ? [[Q5_1.index]] : [[Q5_3.index]] ) : ( [[Q5_2.index]] >= [[Q5_3.index]] ? [[Q5_2.index]] : [[Q5_3.index]] )",
            "noreport": true
        },
        {
            "name": "Cat6_max",
            "type": "eval",
            "formula": "[[Q6_1.index]] >= [[Q6_2.index]] ? [[Q6_1.index]] : [[Q6_2.index]]",
            "noreport": true
        },
        {
            "name": "Cat7_max",
            "type": "eval",
            "formula": "[[Q7_1.index]] >= [[Q7_2.index]] ? ( [[Q7_1.index]] >= [[Q7_3.index]] ? [[Q7_1.index]] : [[Q7_3.index]] ) : ( [[Q7_2.index]] >= [[Q7_3.index]] ? [[Q7_2.index]] : [[Q7_3.index]] )",
            "noreport": true
        },
        {
            "name": "Cat8_max",
            "type": "eval",
            "formula": "[[Q8_1.index]] >= [[Q8_2.index]] ? [[Q8_1.index]] : [[Q8_2.index]]",
            "noreport": true
        },
        {
            "name": "HAQ_DI",
            "type": "eval",
            "dispname": "HAQ機能障害指数(Disability Index): 8つのカテゴリーの最高点の平均値",
            "formula": "( ((Cat1_max)) + ((Cat2_max)) + ((Cat3_max)) + ((Cat4_max)) + ((Cat5_max)) + ((Cat6_max)) + ((Cat7_max)) + ((Cat8_max)) ) / 8"
        },
        {
            "name": "機能的寛解",
            "type": "eval",
            "dispname": "機能的寛解判定: HAQ-DI 0.5未満で機能的寛解",
            "formula": "((HAQ_DI)) < 0.5 ? '機能的寛解' : '機能障害あり'"
        },
        {
            "name": "重症度分類",
            "type": "eval",
            "dispname": "HAQ-DIによる機能障害の重症度分類",
            "formula": "((HAQ_DI)) < 0.5 ? '軽度または機能的寛解' : ( ((HAQ_DI)) < 1.0 ? '軽度から中等度の機能障害' : ( ((HAQ_DI)) < 2.0 ? '中等度から重度の機能障害' : '重度の機能障害' ) )"
        }
    ]
}