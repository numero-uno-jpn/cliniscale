            "formula": "( ( ((活動1.index)) + ((活動2.index)) + ((活動3.index)) + ((活動4.index)) + ((活動5.index)) + ((活動6.index)) + ((活動7.index)) + ((活動8.index)) + ((活動9.index)) + ((活動10.index)) + ((活動11.index)) ) / 11).toFixed(2)"
        },
        {
            "name": "感情領域得点",
            "type": "eval",
            "dispname": "感情領域の平均得点（5項目）",
            "formula": "( ((感情1.index)) + ((感情2.index)) + ((感情3.index)) + ((感情4.index)) + ((感情5.index)) ) / 5"
        },
        {
            "name": "環境刺激領域得点",
            "type": "eval",
            "dispname": "環境刺激領域の平均得点（4項目）",
            "formula": "( ((環境1.index)) + ((環境2.index)) + ((環境3.index)) + ((環境4.index)) ) / 4"
        },
        {
            "name": "AQLQ-S総得点",
            "type": "eval",
            "dispname": "AQLQ-S総得点 全32項目の平均得点（標準化版）",
            "formula": "( ( ((症状領域得点)) * 12 + ((活動制限領域得点)) * 11 + ((感情領域得点)) * 5 + ((環境刺激領域得点)) * 4 ) / 32).toFixed(2)"
        },
        {
            "name": "臨床的意義",
            "type": "eval",
            "formula": "((AQLQ-S総得点)) >= 3.5 ? '中等度以上のQOL' : ( ((AQLQ-S総得点)) >= 2.5 ? '軽度のQOL低下' : '重度のQOL低下' )"
