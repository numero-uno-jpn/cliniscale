            "name": "肘肩圧痛",
            "type": "checkbox",
            "selector": [
                "右肘関節",
                "左肘関節",
                "右肩関節",
                "左肩関節"
            ]
        },
        {
            "dispname": "膝・足の圧痛関節",
            "name": "膝足圧痛",
            "type": "checkbox",
            "selector": [
                "右膝関節",
                "左膝関節",
                "右足首関節",
                "左足首関節",
                "右第1中足趾節関節",
                "左第1中足趾節関節",
                "右第2中足趾節関節",
                "左第2中足趾節関節",
                "右第3中足趾節関節",
                "左第3中足趾節関節",
