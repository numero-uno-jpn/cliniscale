            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q7",
            "type": "radio",
            "dispname": "7. しばしば活動に必要なもの（例：おもちゃ、学校の宿題、鉛筆、本）をなくしてしまう",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q8",
            "type": "radio",
            "dispname": "8. しばしば外からの刺激によって気が散ってしまう",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q9",
            "type": "radio",
            "dispname": "9. しばしば日々の活動で忘れっぽい",
