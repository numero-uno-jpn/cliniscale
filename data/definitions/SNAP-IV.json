            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q22",
            "type": "radio",
            "dispname": "22. しばしば故意に他人をいらだたせるようなことをする",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q23",
            "type": "radio",
            "dispname": "23. しばしば自分の間違いや不振る舞いを他人のせいにする",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q24",
            "type": "radio",
            "dispname": "24. しばしば神経過敏で他人にいらだたされやすい",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q25",
            "type": "radio",
            "dispname": "25. しばしば怒っていて憤慨している",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "name": "q26",
            "type": "radio",
            "dispname": "26. しばしば意地悪で執念深い",
            "required": true,
            "selector": [
                "全くない",
                "少しある",
                "かなりある",
                "非常にある"
            ],
            "selectoridx": "0|1|2|3"
        },
        {
            "type": "subsection"
        },
        {
            "name": "attention_score",
            "type": "eval",
            "dispname": "不注意スコア",
            "formula": "[[q1.index]] + [[q2.index]] + [[q3.index]] + [[q4.index]] + [[q5.index]] + [[q6.index]] + [[q7.index]] + [[q8.index]] + [[q9.index]]"
        },
        {
            "name": "hyperactivity_score",
            "type": "eval",
            "dispname": "多動性・衝動性スコア",
            "formula": "[[q10.index]] + [[q11.index]] + [[q12.index]] + [[q13.index]] + [[q14.index]] + [[q15.index]] + [[q16.index]] + [[q17.index]] + [[q18.index]]"
        },
        {
            "name": "odd_score",
            "type": "eval",
            "dispname": "反抗挑戦性スコア",
            "formula": "[[q19.index]] + [[q20.index]] + [[q21.index]] + [[q22.index]] + [[q23.index]] + [[q24.index]] + [[q25.index]] + [[q26.index]]"
        },
        {
            "name": "adhd_combined_score",
            "type": "eval",
            "dispname": "ADHD合計スコア",
            "formula": "[[attention_score]] + [[hyperactivity_score]]"
        },
        {
            "name": "attention_severity",
            "type": "eval",
            "dispname": "不注意の重症度",
            "formula": "[[attention_score]] < 13 ? '症状なし' : ([[attention_score]] >= 13 && [[attention_score]] <= 17 ? '軽度' : ([[attention_score]] >= 18 && [[attention_score]] <= 22 ? '中等度' : '重度'))"
        },
        {
            "name": "hyperactivity_severity",
            "type": "eval",
            "dispname": "多動性・衝動性の重症度",
            "formula": "[[hyperactivity_score]] < 13 ? '症状なし' : ([[hyperactivity_score]] >= 13 && [[hyperactivity_score]] <= 17 ? '軽度' : ([[hyperactivity_score]] >= 18 && [[hyperactivity_score]] <= 22 ? '中等度' : '重度'))"
        },
        {
            "name": "odd_severity",
            "type": "eval",
            "dispname": "反抗挑戦性の重症度",
            "formula": "[[odd_score]] < 8 ? '症状なし' : ([[odd_score]] >= 8 && [[odd_score]] <= 13 ? '軽度' : ([[odd_score]] >= 14 && [[odd_score]] <= 18 ? '中等度' : '重度'))"
        },
        {
            "name": "attention_average",
            "type": "eval",
            "dispname": "不注意平均スコア",
            "formula": "( ((attention_score)) / 9).toFixed(2)"
        },
        {
            "name": "hyperactivity_average",
            "type": "eval",
            "dispname": "多動性・衝動性平均スコア",
            "formula": "( ((hyperactivity_score)) / 9).toFixed(2)"
        },
        {
            "name": "odd_average",
            "type": "eval",
            "dispname": "反抗挑戦性平均スコア",
            "formula": "((odd_score)) / 8"
        }
    ]
}