        {
            "name": "predictive_concerns",
            "type": "eval",
            "dispname": "予測的懸念数",
            "formula": "[[q2_predictive]] + [[q3_predictive]] + [[q4_predictive]] + [[q5_predictive]] + [[q6_predictive]] + [[q7_predictive]] + [[q9_predictive]]"
        },
        {
            "name": "non_predictive_concerns",
            "type": "eval",
            "dispname": "非予測的懸念数",
            "formula": "[[q1_non_predictive]] + [[q4_non_predictive]] + [[q5_non_predictive]] + [[q8_non_predictive]] + [[q10_non_predictive]]"
        },
        {
            "name": "total_concerns",
            "type": "eval",
            "dispname": "総懸念数",
            "formula": "[[predictive_concerns]] + [[non_predictive_concerns]]"
        },
        {
            "name": "predictive_detail",
            "type": "eval",
            "dispname": "予測的懸念の内訳",
            "formula": "'Q2表出言語:' + [[q2_predictive]] + ' Q3受容言語:' + [[q3_predictive]] + ' Q4微細運動:' + [[q4_predictive]] + ' Q5粗大運動:' + [[q5_predictive]] + ' Q6行動:' + [[q6_predictive]] + ' Q7社会性:' + [[q7_predictive]] + ' Q9学習:' + [[q9_predictive]]"
        },
        {
            "name": "non_predictive_detail",
            "type": "eval",
            "dispname": "非予測的懸念の内訳",
            "formula": "'Q1全般:' + [[q1_non_predictive]] + ' Q4微細運動:' + [[q4_non_predictive]] + ' Q5粗大運動:' + [[q5_non_predictive]] + ' Q8身辺自立:' + [[q8_non_predictive]] + ' Q10その他:' + [[q10_non_predictive]]"
        },
        {
            "name": "path_classification",
            "type": "eval",
            "dispname": "PEDSパス分類",
            "formula": "[[predictive_concerns]] >= 2 ? 'Path A: 高リスク（発達評価への紹介が必要）' : [[predictive_concerns]] == 1 ? 'Path B: 中リスク（発達評価への紹介を検討）' : [[non_predictive_concerns]] >= 1 ? 'Path C: 軽微リスク（発達ガイダンスと経過観察）' : 'Path D/E: 低リスク（定期的な発達促進）'"
        },
        {
            "name": "emergency_path_a",
            "type": "emergency",
            "dispname": "Path A: 高リスク",
            "formula": "[[predictive_concerns]] >= 2"
        },
        {
            "name": "warning_path_b",
            "type": "warning",
            "dispname": "Path B: 中リスク",
            "formula": "[[predictive_concerns]] == 1"
        },
        {
            "name": "completion_note",
