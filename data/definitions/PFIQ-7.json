    {
      "type": "eval",
      "name": "UIQスコア",
      "dispname": "尿路症状生活影響スコア (0-100点)",
      "formula": "( ( [[UIQ1.index]] + [[UIQ2.index]] + [[UIQ3.index]] + [[UIQ4.index]] + [[UIQ5.index]] + [[UIQ6.index]] + [[UIQ7.index]] ) / 7 * 100 / 3).toFixed(2)"
    },
    {
      "type": "eval",
      "name": "CRAIQスコア",
      "dispname": "大腸・肛門症状生活影響スコア (0-100点)",
      "formula": "( ( [[CRAIQ1.index]] + [[CRAIQ2.index]] + [[CRAIQ3.index]] + [[CRAIQ4.index]] + [[CRAIQ5.index]] + [[CRAIQ6.index]] + [[CRAIQ7.index]] ) / 7 * 100 / 3).toFixed(2)"
