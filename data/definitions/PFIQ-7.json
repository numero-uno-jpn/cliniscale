    },
    {
      "type": "eval",
      "name": "PFIQ7合計スコア",
      "dispname": "総合スコア (0-300点)",
      "formula": "( ((UIQスコア)) + ((CRAIQスコア)) + ((POPIQスコア)) ).toFixed(2)"
    },
    {
      "type": "warning",
      "name": "Warning: 中等度生活影響 (100点以上)",
      "formula": "((PFIQ7合計スコア)) >= 100"
    },
    {
      "type": "emergency",
      "name": "Emergency: 高度生活影響 (150点以上)",
      "formula": "((PFIQ7合計スコア)) >= 150"
