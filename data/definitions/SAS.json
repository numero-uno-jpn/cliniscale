        },
        {
            "type": "subsection"
        },
        {
            "name": "raw_score",
            "type": "eval",
            "dispname": "SAS粗点（20-80点）",
            "formula": "[[nervous_anxious.index]] + [[afraid_no_reason.index]] + [[upset_panicky.index]] + [[falling_apart.index]] + [[everything_alright.index]] + [[shake_tremble.index]] + [[headache_pain.index]] + [[weak_tired.index]] + [[calm_still.index]] + [[heart_beating.index]] + [[dizzy_spells.index]] + [[fainting_spells.index]] + [[breathe_easily.index]] + [[numbness_tingling.index]] + [[stomach_indigestion.index]] + [[bladder_often.index]] + [[hands_dry_warm.index]] + [[face_hot_blush.index]] + [[sleep_easily.index]] + [[nightmares.index]]"
        },
        {
            "name": "standard_score",
            "type": "eval",
            "dispname": "SAS標準得点",
            "formula": "Math.floor([[raw_score]] * 1.25)"
        },
        {
            "name": "anxiety_level",
            "type": "eval",
            "dispname": "不安レベル判定",
            "formula": "[[standard_score]] < 50 ? '正常範囲' : [[standard_score]] < 60 ? '軽度の不安' : [[standard_score]] < 70 ? '中等度の不安' : '重度の不安'"
        }
    ]
