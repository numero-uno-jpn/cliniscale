            "name": "睡眠障害",
            "type": "scale",
            "min": 0,
            "max": 10,
            "step": 1,
            "starttag": "睡眠障害なし",
            "endtag": "想像しうる最悪の睡眠障害",
            "value": 0
        },
        {
            "type": "subsection"
        },
        {
            "name": "範囲合計A",
            "type": "eval",
            "formula": "( [[頭部前面.index]] + [[頭部後面.index]] + [[右腕前面.index]] + [[右腕後面.index]] + [[左腕前面.index]] + [[左腕後面.index]] + [[胸腹部.index]] + [[背部.index]] + [[右下肢前面.index]] + [[右下肢後面.index]] + [[左下肢前面.index]] + [[左下肢後面.index]] + [[外陰部.index]] ) / 2",
            "dispname": "皮疹の範囲（A）"
        },
        {
            "name": "症状程度合計B",
            "type": "eval",
            "formula": "[[紅斑.index]] + [[浮腫丘疹.index]] + [[浸出液痂皮.index]] + [[掻破痕.index]] + [[苔癬化.index]] + [[皮膚乾燥.index]]",
            "dispname": "症状の程度（B）"
        },
        {
            "name": "自覚症状合計C",
            "type": "eval",
            "formula": "[[かゆみ]] + [[睡眠障害]]",
            "dispname": "自覚症状（C）"
        },
        {
            "name": "SCORADスコア",
            "type": "eval",
            "formula": "((範囲合計A)) / 5 + 7 * [[症状程度合計B]] / 2 + [[自覚症状合計C]]",
            "dispname": "SCORAD総スコア（最大103点）"
        },
        {
            "name": "重症度分類",
            "type": "eval",
            "formula": "((SCORADスコア)) < 25 ? '軽度' : ( ((SCORADスコア)) < 50 ? '中等度' : '重度' )",
            "dispname": "重症度判定"
        }
    ]
