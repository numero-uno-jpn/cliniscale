        {
            "type": "subsection"
        },
        {
            "dispname": "SIAS合計スコア（0-76点）",
            "name": "total_score",
            "type": "eval",
            "formula": "[[M1.index]] + [[M2.index]] + [[M3.index]] + [[M4.index]] + [[M5.index]] + [[T1.index]] + [[T2.index]] + [[T3.index]] + [[T4.index]] + [[S1.index]] + [[S2.index]] + [[S3.index]] + [[S4.index]] + [[R1.index]] + [[R2.index]] + [[P1.index]] + [[TR1.index]] + [[TR2.index]] + [[V1.index]] + [[L1.index]] + [[U1.index]] + [[U2.index]]"
        },
        {
            "dispname": "運動機能小計（0-25点）",
            "name": "motor_score",
            "type": "eval",
            "formula": "[[M1.index]] + [[M2.index]] + [[M3.index]] + [[M4.index]] + [[M5.index]]"
        },
        {
            "name": "motor_lower_score",
            "type": "eval",
            "dispname": "下肢運動機能3項目の合計得点（0-15点）",
            "formula": "[[M3.index]] + [[M4.index]] + [[M5.index]]",
            "noreport": true
        },
        {
            "name": "trunk_score",
            "type": "eval",
            "dispname": "体幹機能2項目の合計得点（0-6点）",
            "formula": "[[TR1.index]] + [[TR2.index]]",
            "noreport": true
        },
        {
            "name": "sensory_score",
            "type": "eval",
            "dispname": "感覚機能4項目の合計得点（0-12点）",
            "formula": "[[S1.index]] + [[S2.index]] + [[S3.index]] + [[S4.index]]",
            "noreport": true
        },
        {
            "name": "severity",
            "type": "eval",
            "dispname": "SIAS総合得点による重症度分類",
            "formula": "[[total_score]] >= 60 ? '軽度' : ( [[total_score]] >= 40 ? '中等度' : '重度' )"
        },
        {
            "dispname": "歩行自立予測",
            "name": "walking_prediction",
            "type": "eval",
            "formula": "( [[total_score]] >= 59 && [[motor_lower_score]] >= 9 && [[trunk_score]] >= 3 && [[sensory_score]] >= 9 ) ? '歩行自立可能性高い' : '要継続評価'"
        }
    ]
