        {
            "type": "eval",
            "name": "positive_total",
            "dispname": "陽性尺度合計点（7-49点）",
            "formula": "[[P1_delusions.index]] + [[P2_conceptual_disorganization.index]] + [[P3_hallucinatory_behavior.index]] + [[P4_excitement.index]] + [[P5_grandiosity.index]] + [[P6_suspiciousness.index]] + [[P7_hostility.index]]"
        },
        {
            "type": "eval",
            "name": "negative_total",
            "dispname": "陰性尺度合計点（7-49点）",
            "formula": "[[N1_blunted_affect.index]] + [[N2_emotional_withdrawal.index]] + [[N3_poor_rapport.index]] + [[N4_passive_social_withdrawal.index]] + [[N5_abstract_thinking.index]] + [[N6_spontaneity_conversation.index]] + [[N7_stereotyped_thinking.index]]"
        },
        {
            "type": "eval",
            "name": "general_total",
            "dispname": "一般精神病理尺度合計点（16-112点）",
            "formula": "[[G1_somatic_concern.index]] + [[G2_anxiety.index]] + [[G3_guilt_feelings.index]] + [[G4_tension.index]] + [[G5_mannerisms_posturing.index]] + [[G6_depression.index]] + [[G7_motor_retardation.index]] + [[G8_uncooperativeness.index]] + [[G9_unusual_thought_content.index]] + [[G10_disorientation.index]] + [[G11_poor_attention.index]] + [[G12_lack_judgment_insight.index]] + [[G13_disturbance_volition.index]] + [[G14_poor_impulse_control.index]] + [[G15_preoccupation.index]] + [[G16_active_social_avoidance.index]]"
        },
        {
            "type": "eval",
            "name": "panss_total",
            "dispname": "PANSS合計点（30-210点）",
            "formula": "[[positive_total]] + [[negative_total]] + [[general_total]]"
        },
        {
            "type": "eval",
            "name": "composite_score",
            "dispname": "複合尺度（陽性-陰性）",
            "formula": "[[positive_total]] - [[negative_total]]"
        }
