        {
            "name": "運動項目合計",
            "type": "eval",
            "formula": "[[食事.index]] + [[整容.index]] + [[清拭.index]] + [[更衣上半身.index]] + [[更衣下半身.index]] + [[トイレ動作.index]] + [[排尿コントロール.index]] + [[排便コントロール.index]] + [[ベッド椅子車椅子移乗.index]] + [[トイレ移乗.index]] + [[浴槽シャワー移乗.index]] + [[歩行車椅子移動.index]] + [[階段昇降.index]]",
            "dispname": "運動項目合計点数（13-91点）"
        },
        {
            "name": "認知項目合計",
            "type": "eval",
            "formula": "[[理解.index]] + [[表出.index]] + [[社会的交流.index]] + [[問題解決.index]] + [[記憶.index]]",
            "dispname": "認知項目合計点数（5-35点）"
        },
        {
            "name": "FIM総合計",
            "type": "eval",
            "formula": "[[運動項目合計]] + [[認知項目合計]]",
            "dispname": "FIM総合計点数（18-126点）"
        },
        {
            "name": "FIM判定",
            "type": "eval",
            "formula": "[[FIM総合計]] >= 110 ? '介護時間ほぼ0分' : ( [[FIM総合計]] >= 91 ? '軽度介護' : ( [[FIM総合計]] >= 70 ? '中等度介護' : ( [[FIM総合計]] >= 40 ? '重度介護' : '最重度介護' ) ) )",
